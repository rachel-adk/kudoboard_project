generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          Int  @id @default(autoincrement())
  title       String
  description String
  author      String
  cards       Card[]
  category    String
  createdAt   DateTime @default(now())

}

model Card {
  id          Int   @id @default(autoincrement())
  title       String
  message     String
  gif         String
  upvotes     Int @default(0)
  boardId    Int?
  board      Board?   @relation(fields: [boardId], references: [id])
  author      String
  createdAt   DateTime @default(now())
}
