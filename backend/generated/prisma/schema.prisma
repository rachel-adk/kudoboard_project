generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          String  @id @default(cuid())
  title       String
  description String
  author      String
  cards       Card[]
  category    String
  createdAt   DateTime @default(now())

}

model Card {
  id          String   @id @default(cuid())
  title       String
  message     String
  gif         String
  upvotes     Int(@default(0))
  Board       Board    @relation(fields: [board_id], references: [id])
  board_id    Int
  author      String
  createdAt   DateTime @default(now())
}
